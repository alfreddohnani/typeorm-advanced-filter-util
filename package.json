    "name": "Alfred Doh-Nani",
    "email": "alfreddohnani@hotmail.com",
    "url": "https://github.com/alfreddohnani"
  },
  "description": "A graphql-friendly utility for creating advanced filter options for typeorm-based APIs",
  "keywords": [
    "typeorm",
    "graphql",
    "filtering",
    "advanced filtering",
    "filter options",
    "ordering",
    "graphql filter schema",
    "graphql filter DTO"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "version": "1.0.3",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jest.config.ts",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "jest": "^28.1.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alfreddohnani/typeorm-advanced-filter-util"
  },
  "files": [
    "dist/**/*"
